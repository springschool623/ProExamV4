@model IEnumerable<ProExam.Models.Subject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}


@foreach (var item in Model)
{
    <!-- Page Header End -->
    <div class="container-xxl py-5 page-header position-relative mb-5">
        <div class="container py-5">
            <h1 class="display-2 text-white animated slideInDown mb-4">Subjects</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Home","Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("US_Subject","Home")">My Subjects</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">@Html.DisplayFor(modelItem => item.Subject_Name) - @Html.DisplayFor(modelItem => item.Subject_ID)</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header End -->

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Testing_Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject_Description)
            </th>
            <th>@ViewBag.TeacherName</th>
        </tr>

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Testing_Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject_Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Subject_ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.Subject_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Subject_ID })
            </td>
        </tr>

    </table>
}

