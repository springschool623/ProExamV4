@model IEnumerable<ProExam.Models.Subject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<style>
    table {
        width: 800px !important;
        margin: auto;
        text-align: center;
    }
</style>

@{ 
    string sessionUserCode = Session["UserCode"] as string;
}


@foreach (var item in Model)
{
    <!-- Page Header End -->
    <div class="container-xxl py-5 page-header position-relative mb-5">
        <div class="container py-5">
            <h1 class="display-2 text-white animated slideInDown mb-4">Subjects</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Home","Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("US_Subject","Home")">My Subjects</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">@Html.DisplayFor(modelItem => item.Subject_Name) - @Html.DisplayFor(modelItem => item.Subject_ID)</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header End -->


    <table class="table">
        <tr>
            <th>
                Tên môn thi
            </th>
            <th>
                Số câu hỏi
            </th>
            <th>
                Thời gian làm bài
            </th>
            <th>
                Chi tiết môn thi
            </th>
            <th>Giáo viên phụ trách</th>
            <th></th>
        </tr>

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionQuantity) câu 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Testing_Time) phút
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject_Description)
            </td>
            <td>@ViewBag.TeacherName</td>
            <td><a href="@Url.Action("TestSchedulesView", "Home", new { subjectId = item.Subject_ID })">Kiểm tra lịch thi</a></td>
        </tr>

    </table>
}

