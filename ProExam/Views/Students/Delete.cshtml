@model ProExam.Models.Student

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dashboard-caption {
        margin: 30px 0;
        text-align: left;
        font-size: 40px;
        font-weight: bold;
    }

    .container-table {
        text-align: center
    }

    table {
        background-color: white;
        margin: auto;
        border-collapse: collapse;
    }

    table, th, td {
        border: none;
        border-bottom: 2px solid #d5d5d5;
    }

    th, td {
        padding: 10px 20px;
        font-size: 22px;
        overflow: hidden;
    }

    .crud-btn {
        display: inline-block;
        width: 40px;
        height: 40px;
        border-radius: 100%;
    }

        .crud-btn i {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100%;
        }

    .ad-mgn_form .form-group input {
        width: 500px;
        pointer-events: none;
    }
</style>

<h1 style="margin-bottom: 10px" class="dashboard-caption">
