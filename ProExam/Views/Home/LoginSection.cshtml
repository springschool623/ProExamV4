@model ProExam.Models.LoginInfo

@{
    ViewBag.Title = "LoginSection";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<style>
    form {
        width: 400px;
        margin: auto;
    }

    .form-element {
        margin: 15px 0px;
    }

        .form-element input, button {
            border-radius: 6px;
        }

        .form-element button {
            width: 100%;
            background: var(--bs-primary);
            border: none;
            padding: 8px 0px;
            color: white;
        }
</style>

<!-- Page Header End -->
<div class="container-xxl py-5 page-header position-relative mb-5">
    <div class="container py-5">
        <h1 class="display-2 text-white animated slideInDown mb-4">Login</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Home","Home")">Home</a></li>
                <li class="breadcrumb-item text-white active" aria-current="page">Login</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->


@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <div class="form-element">
        <label for="usercode">Usercode</label>
        @Html.TextBoxFor(model => model.UserCode, new { @class = "form-control" })
    </div>
    <div class="form-element">
        <label for="password">Password</label>
        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
    </div>
    <div class="form-element">
        <button>Sign in</button>
    </div>
    <div class="form-element" style="text-align: right;">
        <a href="">Forgot password?</a>
    </div>
}
