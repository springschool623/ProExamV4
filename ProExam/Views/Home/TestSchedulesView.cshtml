@model IEnumerable<ProExam.Models.TestSchedule>

@{
    ViewBag.Title = "Test Schedule";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<style>
    .dashboard-caption {
        margin: 30px 0;
        text-align: center;
        font-size: 40px;
        font-weight: bold;
    }

    .btn-add {
        display: flex;
        justify-content: end;
    }

    .container-table {
        padding: 0 120px;
        text-align: center
    }

    .table-wrapper {
        margin: auto;
        overflow-x: auto; /* Thêm thuộc tính cuộn ngang cho bảng */
    }

    table {
        width: 600px; /* Đặt kích thước cố định cho bảng */
        background-color: white;
        border-collapse: collapse;
        margin: auto;
        table-layout: fixed; /* Đặt bố cục cố định cho bảng */
    }

    table, th, td {
        border: none;
        border-bottom: 2px solid #d5d5d5;
    }

    th, td {
        padding: 10px 20px;
        font-size: 16px;
        overflow: hidden;
        word-wrap: break-word;
    }

    .crud-btn {
        display: inline-block;
        width: 40px;
        height: 40px;
        border-radius: 100%;
    }

        .crud-btn i {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100%;
        }

    .crud-btn_create {
        border-radius: 12px;
        margin-bottom: 20px;
        padding: 10px;
    }
</style>

@{
    int countNo = 1; // Biến đếm
}

<!-- Page Header End -->
<div class="container-xxl py-5 page-header position-relative mb-5">
    <div class="container py-5">
        <h1 class="display-2 text-white animated slideInDown mb-4">Test Schedules</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Home","Home")">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item text-white active" aria-current="page">Test Schedules</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<div class="container-table">
    <div class="table-wrapper">
        <table border="1">
            <thead style="border-bottom: 3px solid #d5d5d5 ">
                <tr>
                    <th>STT</th>
                    <th>Môn thi</th>
                    <th>Ngày thi</th>
                    <th>Giờ thi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@countNo</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject.Subject_Name)
                        </td>
                        <td>
                            @((item.Testing_Date != null) ? ((DateTime)item.Testing_Date).ToString("dd/MM/yyyy") : "")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Begining_Time)
                        </td>
                    </tr>

                    countNo++;
                }
            </tbody>
        </table>
    </div>
</div>

